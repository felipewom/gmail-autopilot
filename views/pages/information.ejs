<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body class="container">
    <div
      class="col-md-6 offset-md-3 centered-div d-flex align-items-center flex-column"
    >
      <%- include('../partials/header'); %>
      <div
        class="jumbotron main d-flex align-items-center flex-column information"
      >
        <div id="alert" class="alert"></div>
        <div class="d-flex flex-row">
          <p>Logged in as <b><%= email %></b></p>
          <img
            src="<%= picture %>"
            alt="Profile Picture"
            class="rounded-circle ml-2"
            width="30"
            height="30"
          />
        </div>
        <form
          id="calendlyForm"
          onsubmit="addCalendlyLink(event, '<%= email %>', document.getElementById('link').value)"
        >
          <div class="form-group form-div">
            <label for="link">Calendly Link:</label>
            <input
              class="form-control"
              id="link"
              placeholder="Enter valid Calendly Link"
              value="<%= calendlyLink %>"
            />
            <button id="submit-link" type="submit" class="btn btn-primary mt-3">
              Submit
            </button>
          </div>
        </form>

        <div class="mt-5 d-flex flex-column align-items-center">
          <%if(isWatching){%>
          <p>Stop Watch to disable auto-reply for incoming mails with AI.</p>
          <%}else{%>
          <p>Start Watch to generate auto-reply for incoming mails with AI.</p>
          <%}%>
          <div>
            <button
              class="btn btn-primary"
              id="start-watch"
              onclick="startWatch('<%= email %>')"
            >
              Start Watch
            </button>
            <button
              class="btn btn-danger"
              id="stop-watch"
              onclick="stopWatch('<%= email %>')"
            >
              Stop Watch
            </button>
          </div>
        </div>

        <div class="mt-3">
          <a href="/" class="btn btn-danger">Logout</a>
        </div>
      </div>
      <%- include('../partials/footer'); %>
    </div>
    <%- include('../scripts'); %>
  </body>
</html>
